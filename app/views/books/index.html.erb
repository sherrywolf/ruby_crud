<h1 class="nav navbar">Library <%= link_to 'Add', new_book_path, :class => 'btn btn-success' %></h1>
<div class="sc">
<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @books = Book.paginate(:page => params[:page], :per_page => 20) %>
  <% @books.each do |book| %>
    <tr>
      <td ><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Details', book_path(book), :class => 'btn btn-default' %></td>
      <td><%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-info' %></td>
      <td><%= link_to 'Delete', book_path(book),
              method: :delete,
              data: { confirm: 'Do you realy want to delete "' + book.title + '" ?' }, :class => 'btn btn-danger' %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
</table>
</div>
<div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @books %>'s
    </div>
    <%= will_paginate @books, :container => false %>
</div>
